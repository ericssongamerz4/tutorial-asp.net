<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!-- Configuración para que el diseño sea responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Título de la página, donde se combina ViewData["Title"] y un texto fijo -->
    <title>@ViewData["Title"] - Tutorial_ASP.NET</title>
    <!-- Hoja de estilos de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!-- Hoja de estilos personalizada para la aplicación -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Otra hoja de estilos específica para la aplicación -->
    <link rel="stylesheet" href="~/Tutorial_ASP.NET.styles.css" asp-append-version="true" />
    <!-- Iconos de Bootstrap para añadir íconos fácilmente -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <!-- Barra de navegación con estilo de Bootstrap -->
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Enlace al inicio con el nombre de la aplicación -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tutorial_ASP.NET</a>
                <!-- Botón para colapsar la barra de navegación en pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Contenedor para los enlaces de navegación -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Enlace a la página principal -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Enlace a la página de privacidad -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Enlace a la página de categorías -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal para el contenido dinámico -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Inserta el contenido específico de la vista -->
        </main>
    </div>

    <!-- Pie de página -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Tutorial_ASP.NET - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts necesarios para Bootstrap y funcionalidades personalizadas -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- jQuery para manipulación del DOM -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Scripts de Bootstrap -->
    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Scripts personalizados -->
    @await RenderSectionAsync("Scripts", required: false) <!-- Sección de scripts adicionales para vistas específicas -->
</body>
</html>
