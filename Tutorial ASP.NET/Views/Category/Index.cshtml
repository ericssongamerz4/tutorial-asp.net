@model List<Category> 
<!-- Especifica que el modelo de esta vista es una lista de objetos de tipo Category -->

@{
    // Establece el título de la página, que se usará en el diseño principal (_Layout.cshtml).
    ViewData["Title"] = "Category List";
}

<div class="container-fluid">

    <!-- Encabezado de la página -->
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 class="text-primary">@ViewData["Title"]</h1>
        </div>
        <div class="col-6 text-end">
            <!-- Botón para crear una nueva categoría -->
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> NEW CATEGORY
            </a>	
        </div>
    </div>

    <!-- Tabla para mostrar las categorías -->
    <table class="table table-bordered table-striped">
        <thead>
            <!-- Encabezado de la tabla -->
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            <!-- Recorre cada elemento de la lista de categorías (Model) -->
            @foreach (var obj in Model)
            {
                <tr>
                    <!-- Muestra el Id de la categoría -->
                    <td>@obj.Id</td>
                    <!-- Muestra el nombre de la categoría -->
                    <td>@obj.Name</td>
                    <!-- Muestra el orden de visualización de la categoría -->
                    <td>@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>
