@model Category 
<!-- Especifica que esta vista utiliza un modelo de tipo Category -->

<form method="post"> <!-- El formulario utiliza el método POST para enviar datos al servidor -->
    <div class="border p-3 mt-4">

        <!-- Encabezado del formulario -->
        <div class="row pb-lg-2">
            <h1 class="text-primary">Create Category</h1>
            <hr/> 
        </div>

        <!-- Muestra mensajes de validación generales del modelo -->
        <div asp-validation-summary="ModelOnly"></div>

        <!-- Campo para ingresar el nombre de la categoría -->
        <div class="mb-3 row">
            <!-- Etiqueta vinculada a la propiedad Name del modelo -->
            <label asp-for="Name" mt-4">Category Name</label>
            <!-- Campo de entrada para Name, vinculado automáticamente al modelo -->
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter category">
            <!-- Mensaje de error para validaciones específicas de la propiedad Name -->
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Campo para ingresar el orden de visualización -->
        <div class="mb-3 row">
            <!-- Etiqueta vinculada a la propiedad DisplayOrder del modelo -->
            <label asp-for="DisplayOrder" class="form-label mt-4"></label>
            <!-- Campo de entrada para DisplayOrder, vinculado automáticamente al modelo -->
            <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order">
            <!-- Mensaje de error para validaciones específicas de la propiedad DisplayOrder -->
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <!-- Botones del formulario -->
        <div class="col">
            <!-- Botón para enviar el formulario -->
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Submit</button> <!-- Botón con estilo Bootstrap -->
            </div>
            <!-- Enlace para regresar a la lista de categorías -->
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                    Back to list <!-- Texto del botón -->
                </a>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <!-- Incluye scripts para validación de cliente -->
    @{
        <partial name="_ValidationScriptsPartial" /> <!-- Scripts de validación de ASP.NET Core -->
    }
}
